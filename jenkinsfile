
pipeline {
    agent { label 'node-1' }  // Set the agent to use node-1

    environment {
        DOCKER_IMAGE = 'my-app'              // Docker image name
        DOCKER_TAG = 'latest'                // Docker tag
        DOCKER_HUB_REPO = 'royjith/pikube'   // Add your Docker Hub repository 
        DOCKER_HUB_CREDENTIALS_ID = 'dockerhub'  // Credential id
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from Git...'
                git branch: 'main', credentialsId: 'dockerhub', url: 'https://github.com/Royjith/docker.git'                
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh 'docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .'
                }
            }
        }

        stage('Trivy Scan') {
            steps {
                // Trivy scan for vulnerabilities with severity levels HIGH and CRITICAL
                echo 'Running Trivy vulnerability scan on the Docker image...'
                sh 'trivy --severity HIGH,CRITICAL --skip-update --no-progress image --format table -o trivy-scan-report.txt ${DOCKER_IMAGE}:${DOCKER_TAG}'
            }
        }

        stage('Push Image to DockerHub'){
			steps {
				script {
					echo 'pushing docker image to DockerHub...'
					docker.withRegistry('https://registry.hub.docker.com', "${DOCKER_HUB_CREDENTIALS_ID}"){
						dockerImage.push('latest')
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean workspace after pipeline execution
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
